{% extends 'base.html.twig' %}

{% block title %}Photos{% endblock %}

{% block body %}
    <h1>Photos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ photo.id }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ photo.imageName }}</td>
            </tr>
            <tr>
                <th>ImageSize</th>
                <td>{{ photo.imageSize }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ photo.createdAt ? photo.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ photo.updatedAt ? photo.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        <img style="max-width: 100%" src="{{ vich_uploader_asset(
            photo,'imageFile'
        ) }}">
    </div>

    <a href="{{ path('app_photos_edit', {'id': photo.id}) }}">edit</a>

    {{ include('photos/_delete_form.html.twig') }}
{% endblock %}
