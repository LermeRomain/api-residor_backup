{% extends 'base.html.twig' %}

{% block title %}Logements index{% endblock %}

{% block body %}
    <div class="navbar">{% include ('/navbar/index.html.twig') %}</div>
    <div class="container">
        <h1>Logements index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for logement in logements %}
                <tr>
                    <td>{{ logement.titre }}</td>
                    <td>{{ logement.description }}</td>
                    <td>
                        <a href="{{ path('app_logements_show', {'id': logement.id}) }}" class="btn btn-primary">show</a>
                        <a href="{{ path('app_logements_edit', {'id': logement.id}) }}" class="btn btn-warning">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation">
           {{ knp_pagination_render(logements) }}
        </div>
        <a href="{{ path('app_logements_new') }}" class="btn btn-primary">Ajouter un logement</a>
    </div>
{% endblock %}
